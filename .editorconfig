root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# Markdown でこれを設定するとリストのフォーマットがおかしくなるので除外する
[!*.md]
indent_size = 4

[*.{js,ts,jsx,tsx,html,html}]
indent_size = 2

[*.{json,jsonc,yml,yaml,prettierrc}]
indent_size = 2

[{Makefile,makefile}]
indent_style = tab
indent_size = 4
