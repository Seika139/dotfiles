{
  "permissions": {
    "allow": ["Bash(mkdir:*)", "Bash(touch:*)", "Bash(ls:*)", "Bash(cat:*)"],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Read(.env)",
      "Read(**/*token*)",
      "Read(**/secrets/**)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}
