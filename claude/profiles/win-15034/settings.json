{
  "env": {
    "ANTHROPIC_MODEL": "us.anthropic.claude-sonnet-4-5-20250929-v1:0",
    "ANTHROPIC_SMALL_FAST_MODEL": "us.anthropic.claude-haiku-4-5-20251001-v1:0",
    "AWS_REGION": "us-east-1",
    "CLAUDE_CODE_USE_BEDROCK": "1",
    "API_TIMEOUT_MS": "1200000"
  },
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(gh auth status)",
      "Bash(gh extension list)",
      "Bash(gh run list)",
      "Bash(gh run view:*)",
      "PowerShell(Get-ChildItem:*)",
      "PowerShell(New-Item:*)",
      "PowerShell(Get-Content:*)",
      "PowerShell(powershell:*)",
      "Command(curl:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Read(.env)",
      "Read(**/*token*)",
      "Read(**/secrets/**)",
      "Read(**/*key*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Bash(cdk deploy:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(gh repo create:*)",
      "Bash(gh repo delete:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue delete:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr close:*)",
      "Bash(gh release create:*)",
      "Bash(gh release delete:*)",
      "Bash(gh alias set:*)",
      "Bash(gh alias delete:*)",
      "Bash(gh api POST:*)",
      "Bash(gh api PUT:*)",
      "Bash(gh api PATCH:*)",
      "Bash(gh api DELETE:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opusplan",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh.exe -c \"New-BurntToastNotification -Text 'Claude finished', (Get-Date).ToString('HH:mm:ss')\""
          },
          {
            "type": "command",
            "command": "sleep 9.7 && mshta vbscript:Execute(\"CreateObject(\"\"SAPI.SpVoice\"\").Speak(\"\"クロードが停止しました\"\"):close\")"
          },
          {
            "type": "command",
            "command": "pwsh -sta -c \"Add-Type -AssemblyName presentationCore; $homePath=[Environment]::GetFolderPath('UserProfile'); $dir=Join-Path $homePath 'dotfiles\\claude\\ringtones'; $files=Get-ChildItem -LiteralPath $dir -File | Where-Object { $_.Extension -match '^\\.(mp3|wav)' }; if($files){ $pick=$files | Get-Random; $m=New-Object System.Windows.Media.MediaPlayer; $m.Volume = 0.4; $m.Open([uri]$pick.FullName); $m.Play(); Start-Sleep 10 } else { [console]::Beep(880,300) }\""
          },
          {
            "type": "command",
            "command": "curl https://hooks.slack.com/triggers/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"
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory",
  "statusLine": { "type": "command", "command": "~/.claude/status_line.sh" }
}
