  "[html]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "files.exclude": {
    "**/.git": false,
    "**/*.meta": true,
    "**/*.out": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // テキスト校正くん
  "japanese-proofreading.textlint.丸かっこ（）": false,
  "japanese-proofreading.textlint.全角文字と半角文字の間": false,
  "japanese-proofreading.textlint.外来語カタカナ表記": false,
  "japanese-proofreading.textlint.ひらく漢字": false,
  "japanese-proofreading.textlint.助詞の連続": false,
  "japanese-proofreading.textlint.技術用語": false,
  // yaml
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "gitlens.codeLens.scopes": ["document"],
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  // docker-compose.yml
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "markdown.marp.themes": [
    "/Users/suzukikenichi/knowledges/reading_books/test.css"
  ],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "redhat.telemetry.enabled": true,
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "shellcheck.customArgs": ["-x"],
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    },
    "dash": {
      "path": "/bin/dash"
    }
  },
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.unicodeVersion": "11",
  "vsicons.dontShowNewVersionMessage": true,
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csharp]": {
    "editor.formatOnSave": true
  },
  "omnisharp.path": "latest",
  "omnisharp.monoPath": "/Library/Frameworks/Mono.framework/Versions/Current/Commands/mono",
  "omnisharp.useGlobalMono": "always",
  "omnisharp.useModernNet": false,
  "editor.formatOnPaste": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.wrapTabs": true,
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmPasteNative": false,
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "scminput": true,
    "plaintext": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Write commit message in Japanese."
    },
    {
      "text": "Follow the Conventional Commits format strictly for commit messages. "
    },
    {
      "text": "Use the structure below:\n\n```\n<type>[optional scope]: <gitmoji> <description>\n\n[optional body]\n```\n\nGuidelines:\n\n1. **Type and Scope**: Choose an appropriate type (e.g., `feat`, `fix`) and optional scope to describe the affected module or feature.\n\n2. **Gitmoji**: Include a relevant `gitmoji` that best represents the nature of the change.\n\n3. **Description**: Write a concise, informative description in the header; use backticks if referencing code or specific terms.\n\n4. **Body**: For additional details, use a well-structured body section:\n   - Use bullet points (`*`) for clarity.\n   - Clearly describe the motivation, context, or technical details behind the change, if applicable.\n\nCommit messages should be clear, informative, and professional, aiding readability and project tracking."
    }
  ],
  "accessibility.signals.onDebugBreak": {
    "announcement": "off",
    "sound": "off"
  },
  "accessibility.signals.noInlayHints": {
    "announcement": "off",
    "sound": "off"
  },
  "accessibility.signals.chatResponseReceived": {
    "sound": "off"
  },
  "accessibility.signals.taskFailed": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signalOptions.volume": 0,
  "makefile.configureOnOpen": true,
  "python.analysis.typeCheckingMode": "standard",
  "window.zoomLevel": -0.8,
  "terminal.integrated.detectLocale": "auto",
  "docker.extension.enableComposeLanguageServer": false,
  "diffEditor.codeLens": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4",
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "geminicodeassist.displayInlineContextHint": false,
  "remote.autoForwardPortsSource": "hybrid",
  "python.languageServer": "Default",
  "color-picker-universal.avoidDuplicate": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // dotfiles 設定: DecContainer で自動的に dotfiles をクローンしてインストールする
  "dotfiles.repository": "https://github.com/Seika139/dotfiles.git", // dotfiles リポジトリの URL を指定
  "dotfiles.installCommand": "install.sh", // インストールコマンドを指定
  "terminal.integrated.profiles.linux": {
    // Linux でターミナルを開くときに bash を login シェルで開く設定
    // Docker コンテナがデフォルトで非ログインシェルで開かれるのを回避する
    "bash": { "path": "bash", "icon": "terminal-bash", "args": ["-l"] }
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "remote.containers.environment": {
    "GIT_USER_NAME": "${localEnv:GIT_USER_NAME}",
    "GIT_USER_SIGNINGKEY": "${localEnv:GIT_USER_SIGNINGKEY}",
    "GIT_USER_EMAIL": "${localEnv:GIT_USER_EMAIL}"
  }
}
