{
  "manifest_version": 3,
  "name": "Media Control Shortcut",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*", "https://abema.tv/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-media-playback": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Toggle media playback"
    }
  }
}
